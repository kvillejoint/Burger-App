<div class="container">
    <div class="row">
        <img src="img/burger2.gif">
    </div>
    <div class="row">
        <h1>Eat-Da-Burger!</h1>
    </div>

    <div class="row">
        <div class="col s3"></div>
        <div class="col s9">
            <form action="/burgers" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter burger here...">
                </div>
                <button type="submit" class="btn btn-default" id="submit-btn">Submit</button>
                <p>Enter a burger you want to eat and Click the "Submit" button.</p>    
            </form>
                        
        </div>
        <div class="col s3"></div>
        
        <div class="col s6">
            <ul>
                {{#each devoured}}
                    <h3>{{id}}. {{burger_name}}</h3>
                {{/each}}
            </ul>
        </div>     
    </div> 
</div>